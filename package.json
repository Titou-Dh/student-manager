{
  "name": "student-manager",
  "version": "1.0.0",
  "description": "Student Manager - MERN monorepo",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "start": "concurrently \"npm start --workspace=server\" \"npm run dev --workspace=client\"",
    "install:all": "npm install && npm install --workspace=server && npm install --workspace=client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

